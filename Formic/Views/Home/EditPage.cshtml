@model RecordSet

@{
    ViewData["Formic.Title"] = "Edit a " + Model.EntityName;
    var entity = Model.Data.Single();
}


<div class="mdl-grid mdl-color--white mdl-shadow--2dp">
    <div class="mdl-layout-spacer"></div>
    <form asp-controller="Home" asp-action="DeleteRecord" class="mdl-cell mdl-cell--2-col" style="text-align:right">
        <input type="submit" value="Delete" class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent" />
    </form>
    <form method="post" class="mdl-cell mdl-cell--12-col">
        @foreach (var prop in Model.Properties)
        {
            if (prop.IsPrimaryKey)
            {
                // primary key shouldn't be edited
                @Html.EditorProperty(entity, prop, new { type = "hidden" })
            }
            else
            {
                @Html.EditorProperty(entity, prop)
            }
        }
        <div>
            <input type="submit" value="Save" />
        </div>
    </form>
</div>
